#!ipxe

:custom
clear choice
menu Oppergod's Menu
item --gap This is the first sub menu
item --key V load_VRM ${space} Start Veeam Recovery Image
item --key G load_GP ${space} Start GParted 0.27.0-1
choose choice || goto custom_exit
echo ${cls}
goto ${choice}
goto custom_exit

:load_VRM
san-boot --no-describe http://nas.thuis.loc/boot/VRM.ISO

:load_GP
san-boot --no-describe http://nas.thuis.loc/boot/gparted-live-0.27.0-1-amd64.iso

:custom_exit
chain utils.ipxe
exit
